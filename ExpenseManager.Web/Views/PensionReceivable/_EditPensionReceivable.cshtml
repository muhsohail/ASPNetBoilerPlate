@model ExpenseManager.PensionReceivable.Dto.UpdatePensionReceivableDto

@using ExpenseManager.Web.Models.Common.Modals
@using Abp.Web.Mvc.Extensions

@{
    Layout = null;
}

@{
    ViewBag.ActiveMenu = PageNames.Users;
}

@section scripts
{
    @Html.IncludeScript("~/Views/Pension/_EditPensionReceivable.js")
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditPensionReceivable")))

<div class="card">
    <div class="body">

        @using (Html.BeginForm("Update", "PensionReceivable", FormMethod.Post))
        {

            @Html.HiddenFor(model => model.Id)

            @Html.AntiForgeryToken()

            if (@ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    <i class="fa fa-warning"></i> @ViewBag.ErrorMessage
                </div>
            }


            <div class="form-group form-float">
                <div class="form-line">
                    <input type="text" class="form-control" name="Amount" value="@Model.Amount">
                </div>
            </div>

            <div class="form-group form-float">
                <div class="form-line">
                    <input type="Date" class="form-control" name="DateReceived" value="@Model.DateReceived.ToString("yyyy-MM-dd")">
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <a href="@Url.Action("Index", "PensionReceivable")" cl class="btn btn-default waves-effect">@L("Back")</a>
                    <button id="RegisterButton" class="btn bg-pink waves-effect" type="submit">@L("Update")</button>
                </div>
            </div>
        }
    </div>
</div>